## Receive options.
set imap_user=xavier.coiffard@gmail.com
set folder = imaps://xavier.coiffard@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url=smtps://xavier.coiffard@smtp.gmail.com
set realname='xavier.coiffard'
set from=xavier.coiffard@gmail.com
set hostname="gmail.com"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=xavier.coiffard@gmail.com
