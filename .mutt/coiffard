## Receive options.
set imap_user=xavier@coiffard.net
set folder      = imaps://ssl0.ovh.net/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set my_user=xavier@coiffard.net
set realname = 'Xavier Coiffard'
set from = 'xavier@coiffard.net'
set use_from = yes

set smtp_url=smtps://$imap_user@ssl0.ovh.net
set signature="Xavier Coiffard"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook xavier@coiffard.net/ "set imap_user=xavier@coiffard.net
